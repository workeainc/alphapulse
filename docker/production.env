# AlphaPlus Production Environment Configuration
# Secure environment variables for production deployment

# Database Configuration
POSTGRES_DB=alphapulse
POSTGRES_USER=alphapulse_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis-master:6379
REDIS_PORT=6379

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=your_secure_grafana_password_here

# SSL Configuration
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# Security Configuration
SECRET_KEY=your_super_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# External API Keys (replace with your actual keys)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Trading Configuration
DEFAULT_SYMBOL=BTCUSDT
MAX_POSITION_SIZE=1000
RISK_LIMIT=0.02
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.10

# Machine Learning Configuration
ML_MODEL_PATH=/app/models
MODEL_UPDATE_INTERVAL=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Performance Configuration
CACHE_TTL=300
MAX_CACHE_SIZE=1000
WEBSOCKET_POOL_SIZE=10
DATABASE_POOL_SIZE=20

# Alert Configuration
ALERT_EMAIL=alerts@yourdomain.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Backup Configuration
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
API_RATE_LIMIT=1000
WS_RATE_LIMIT=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3