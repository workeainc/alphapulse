{
  "version": 2,
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "apps/backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "apps/web/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "apps/backend"
  },
  "functions": {
    "apps/backend/main.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  }
}
